# Maintainer: Joshua Rubin <joshua@rubixlinux.org>

X11=X11R7.0

pkgname=xclock
pkgver=1.0.1
pkgrel=1
pkgdesc="X.Org xclock app"
url="http://www.x.org"
depends=('libXext' 'glibc' 'libSM' 'libXp' 'libXaw' 'fontconfig' 'expat' 'libICE' 'libXrender' 'zlib' 'libXau' 'freetype2' 'libXpm' 'libX11' 'libXdmcp' 'libXmu' 'libXt' 'libXft' 'libxkbfile')
source=(ftp://ftp.x.org/pub/$X11/src/app/$pkgname-$X11-$pkgver.tar.bz2)
md5sums=('00444fed4bf5cd51624476ee11dd1fab')
groups=('x11-app')

## Todo:
##   None

## Notes:
##   None

## Changelog:
##   rel1: Initial Rubix release

build() {

	cd $startdir/src/$pkgname-$X11-$pkgver

	./configure --prefix=/usr/X11R7
	make || return 1
	make DESTDIR=$startdir/pkg install

	mkdir -p $startdir/pkg/usr/X11R7/lib/X11/doc/$pkgname-$X11-$pkgver
	cp	-a		\
		AUTHORS		\
		COPYING		\
		ChangeLog	\
		INSTALL		\
		NEWS		\
		README		\
	$startdir/pkg/usr/X11R7/lib/X11/doc/$pkgname-$X11-$pkgver
	chmod 644 $startdir/pkg/usr/X11R7/lib/X11/doc/$pkgname-$X11-$pkgver/*

	chown -R root.bin $startdir/pkg/usr/X11R7/bin

}
