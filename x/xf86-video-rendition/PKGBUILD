# Maintainer: Joshua Rubin <joshua@rubixlinux.org>

X11=X11R7.0

pkgname=xf86-video-rendition
pkgver=4.0.1.3
pkgrel=1
pkgdesc="X.Org rendition video driver"
url="http://www.x.org"
depends=('glibc')
source=(ftp://ftp.x.org/pub/$X11/src/driver/$pkgname-$X11-$pkgver.tar.bz2)
md5sums=('f1a25db74a148dea45115e813027b932')
groups=('x11-driver' 'x11-video')

## Todo:
##   None

## Notes:
##   None

## Changelog:
##   rel1: Initial Rubix release

build() {

	export MAKEFLAGS=""

	cd $startdir/src/$pkgname-$X11-$pkgver

	./configure --prefix=/usr/X11R7 --with-xorg-module-dir=/usr/X11R7/lib/modules
	make || return 1
	make DESTDIR=$startdir/pkg install

	mkdir -p $startdir/pkg/usr/X11R7/lib/X11/doc/$pkgname-$X11-$pkgver
	cp	-a		\
		COPYING		\
		ChangeLog	\
		README		\
	$startdir/pkg/usr/X11R7/lib/X11/doc/$pkgname-$X11-$pkgver
	chmod 644 $startdir/pkg/usr/X11R7/lib/X11/doc/$pkgname-$X11-$pkgver/*

	find $startdir/pkg -name *.la -exec rm {} \;

}
