# Maintainer: Joshua Rubin <joshua@rubixlinux.org>

pkgname=koffice-l10n-el
pkgver=1.4.2
pkgrel=1
pkgdesc="koffice-l10n-el Greek language support for KOffice."
depends=('koffice')
source=(ftp://ftp.kde.org/pub/kde/stable/koffice-1.4.2/src/koffice-l10n/$pkgname-$pkgver.tar.bz2)

build() {

	cd $startdir/src/$pkgname-$pkgver

	./configure --prefix=/opt/kde --program-prefix="" --program-suffix=""
	make || return 1
	make install DESTDIR=$startdir/pkg

}
