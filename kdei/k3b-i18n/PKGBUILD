pkgname=k3b-i18n
pkgver=0.12.12
pkgrel=1
pkgdesc="k3b-i18n (internationalization files for the CD Creator)"
depends=('k3b')
source=(http://dl.sourceforge.net/sourceforge/k3b/$pkgname-$pkgver.tar.bz2)
md5sums=('32029e9a4fdf599a18591d8ac980c299')
url="http://k3b.sourceforge.net"

## Todo:
