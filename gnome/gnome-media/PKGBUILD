# Maintainer: Joshua Rubin <joshua@rubixlinux.org>

pkgname=gnome-media
pkgver=2.14.0
pkgrel=2
pkgdesc="gnome-media - multimedia related programs for the gnome desktop"
depends=('glibc' 'libXi' 'libgnomeui' 'esound' 'fontconfig' 'expat' 'openssl' 'libgnomecanvas' 'gail' 'libXrender' 'zlib' 'alsa-lib' 'libXau' 'libjpeg' 'gst-plugins-base' 'libgnome' 'dbus' 'libXdmcp' 'audiofile' 'libxml2' 'gstreamer' 'libbonoboui' 'nautilus-cd-burner' 'libpng' 'libXinerama' 'libSM' 'orbit2' 'libXext' 'libglade' 'gtk+2' 'atk' 'hal' 'gconf' 'libICE' 'libart_lgpl' 'freetype2' 'libXfixes' 'cairo' 'pango' 'libXcursor' 'libbonobo' 'libX11' 'glib2' 'gnome-keyring' 'gnome-vfs' 'libXrandr' 'popt' 'scrollkeeper' 'desktop-file-utils' 'hicolor-icon-theme')
source=(ftp://ftp.gnome.org/pub/GNOME/sources/$pkgname/2.14/$pkgname-$pkgver.tar.bz2)
md5sums=('e1304b3fb5e069025bb2c1ea3f9f8b62')
groups=('gnome')
install=$pkgname.install

## Todo:
##   None

## Notes:
##   None

## Changelog:
##   rel2: added scrollkeeper, desktop-file-utils and hicolor-icon-theme as deps (for install script) 2006.04.06
##   rel1: initial rubix release

build() {

	export MAKEFLAGS=""

	cd $startdir/src/$pkgname-$pkgver

	./configure --prefix=/usr --sysconfdir=/etc
	make || return 1
	make DESTDIR=$startdir/pkg install

	mkdir -p $startdir/pkg/usr/doc/$pkgname-$pkgver
	cp	-a		\
		AUTHORS		\
		COPYING*	\
		ChangeLog	\
		INSTALL		\
		MAINTAINERS	\
		NEWS		\
		README		\
		TODO		\
	$startdir/pkg/usr/doc/$pkgname-$pkgver
	chmod 644 $startdir/pkg/usr/doc/$pkgname-$pkgver/*

	chown -R root.bin $startdir/pkg/usr/bin

	find $startdir/pkg -name *.la -exec rm {} \;

}
