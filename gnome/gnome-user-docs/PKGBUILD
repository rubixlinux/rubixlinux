# Maintainer: Joshua Rubin <joshua@rubixlinux.org>

pkgname=gnome-user-docs
pkgver=2.14.0
pkgrel=1
pkgdesc="gnome-user-docs - gnome documentation"
source=(ftp://ftp.gnome.org/pub/GNOME/sources/$pkgname/2.14/$pkgname-$pkgver.tar.bz2)
md5sums=('1b258d00f4b9ed0cae9e6c9ea06c55b8')
groups=('gnome')

## Todo:
##   None

## Notes:
##   None

## Changelog:
##   rel1: initial rubix release

build() {

	export MAKEFLAGS=""

	cd $startdir/src/$pkgname-$pkgver

	./configure --prefix=/usr --disable-scrollkeeper
	make || return 1
	make DESTDIR=$startdir/pkg install

	mkdir -p $startdir/pkg/usr/doc/$pkgname-$pkgver
	cp	-a		\
		AUTHORS		\
		COPYING*	\
		ChangeLog	\
		INSTALL		\
		NEWS		\
		README		\
	$startdir/pkg/usr/doc/$pkgname-$pkgver
	chmod 644 $startdir/pkg/usr/doc/$pkgname-$pkgver/*

}
