# Maintainer: Joshua Rubin <joshua@rubixlinux.org>

pkgname=gnome-netstatus
pkgver=2.12.0
pkgrel=2
pkgdesc="gnome-netstatus - network interface information applet"
depends=('glibc' 'libXi' 'libgnomeui' 'esound' 'fontconfig' 'expat' 'openssl' 'libgnomecanvas' 'libXrender' 'zlib' 'alsa-lib' 'libXau' 'libjpeg' 'libgnome' 'libXdmcp' 'audiofile' 'libxml2' 'gnome-panel' 'libbonoboui' 'libpng' 'libXinerama' 'libSM' 'orbit2' 'libXext' 'libglade' 'gtk+2' 'atk' 'gconf' 'libICE' 'libart_lgpl' 'freetype2' 'libXfixes' 'pango' 'cairo' 'libXcursor' 'libbonobo' 'libX11' 'glib2' 'gnome-keyring' 'gnome-vfs' 'libXrandr' 'popt' 'scrollkeeper' 'desktop-file-utils' 'hicolor-icon-theme')
source=(ftp://ftp.gnome.org/pub/GNOME/sources/$pkgname/2.12/$pkgname-$pkgver.tar.bz2)
md5sums=('a5f23731a3bf232969e82afef8792a36')
groups=('gnome')
install=$pkgname.install

## Todo:
##   None

## Notes:
##   None

## Changelog:
##   rel2: added scrollkeeper, desktop-file-utils and hicolor-icon-theme as deps (for install script) 2006.04.06
##   rel1: initial rubix release

build() {

	export MAKEFLAGS=""

	cd $startdir/src/$pkgname-$pkgver

	./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var/lib --disable-scrollkeeper
	make || return 1
	make DESTDIR=$startdir/pkg install

	mkdir -p $startdir/pkg/usr/doc/$pkgname-$pkgver
	cp	-a		\
		AUTHORS		\
		COPYING		\
		ChangeLog	\
		INSTALL		\
		MAINTAINERS	\
		NEWS		\
		README		\
		TODO		\
	$startdir/pkg/usr/doc/$pkgname-$pkgver
	chmod 644 $startdir/pkg/usr/doc/$pkgname-$pkgver/*

	rm -r $startdir/pkg/var

}
