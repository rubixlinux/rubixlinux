# Maintainer: Joshua Rubin <joshua@rubixlinux.org>

pkgname=pessulus
pkgver=0.9
pkgrel=1
pkgdesc="pessulus - pessulus is a lockdown editor that allows administrators to easily disable certain features of the gnome desktop, as may be desired in corporate environments and internet cafés"
depends=('python')
source=(ftp://ftp.gnome.org/pub/GNOME/sources/$pkgname/0.9/$pkgname-$pkgver.tar.bz2)
md5sums=('e62a51b93ce0454b911ff37d261350b7')
groups=('gnome')

## Todo:
##   None

## Notes:
##   None

## Changelog:
##   rel1: initial rubix release

build() {

	export MAKEFLAGS=""

	cd $startdir/src/$pkgname-$pkgver

	./configure --prefix=/usr
	make || return 1
	make DESTDIR=$startdir/pkg install

	mkdir -p $startdir/pkg/usr/doc/$pkgname-$pkgver
	cp	-a		\
		AUTHORS		\
		COPYING		\
		ChangeLog	\
		HACKING		\
		INSTALL		\
		MAINTAINERS	\
		NEWS		\
		README		\
		TODO		\
	$startdir/pkg/usr/doc/$pkgname-$pkgver
	chmod 644 $startdir/pkg/usr/doc/$pkgname-$pkgver/*

	chown -R root.bin $startdir/pkg/usr/bin

}
