pkgname=yelp
pkgver=2.14.0
pkgrel=3
pkgdesc="yelp - help browser for gnome"
depends=('glibc' 'libXi' 'libgnomeui' 'esound' 'fontconfig' 'expat' 'openssl' 'libgnomecanvas' 'libXrender' 'libgnomeprintui' 'zlib' 'alsa-lib' 'libXau' 'libgnomeprint' 'libjpeg' 'libgnome' 'libXdmcp' 'audiofile' 'libxml2' 'libbonoboui' 'startup-notification' 'libpng' 'libXinerama' 'libXext' 'orbit2' 'libSM' 'libglade' 'gtk+2' 'atk' 'gconf' 'libICE' 'libart_lgpl' 'freetype2' 'libxslt' 'libXfixes' 'cairo' 'pango' 'libXcursor' 'libbonobo' 'libX11' 'libgcrypt' 'bzip2' 'glib2' 'libgpg-error' 'firefox' 'gnome-keyring' 'gnome-vfs' 'gcc' 'libXrandr' 'popt' 'scrollkeeper' 'desktop-file-utils' 'hicolor-icon-theme')
source=(ftp://ftp.gnome.org/pub/GNOME/sources/$pkgname/2.14/$pkgname-$pkgver.tar.bz2)
md5sums=('eef25315bfe8162dd7bcc2aabf31bcf8')
groups=('gnome')
install=$pkgname.install

## Todo:
##   None

## Notes:
##   None

## Changelog:
##   rel3: added scrollkeeper, desktop-file-utils and hicolor-icon-theme as deps (for install script) 2006.04.06
##   rel2: added install script 2006.03.23
##   rel1: initial rubix release

build() {

	export MAKEFLAGS=""

	cd $startdir/src/$pkgname-$pkgver

	./configure --prefix=/usr --sysconfdir=/etc
	make || return 1
	make DESTDIR=$startdir/pkg install

	mkdir -p $startdir/pkg/usr/doc/$pkgname-$pkgver
	cp	-a		\
		AUTHORS		\
		COPYING		\
		ChangeLog	\
		INSTALL		\
		MAINTAINERS	\
		NEWS		\
		README		\
		TODO		\
	$startdir/pkg/usr/doc/$pkgname-$pkgver
	chmod 644 $startdir/pkg/usr/doc/$pkgname-$pkgver/*

	chown -R root.bin $startdir/pkg/usr/bin

}
