# Maintainer: Joshua Rubin <joshua@rubixlinux.org>

pkgname=libbonobo
pkgver=2.14.0
pkgrel=1
pkgdesc="libbonobo - gnome corba framework"
depends=('glibc' 'orbit2' 'glib2' 'zlib' 'popt' 'libxml2')
source=(ftp://ftp.gnome.org/pub/GNOME/sources/$pkgname/2.14/$pkgname-$pkgver.tar.bz2)
md5sums=('f1f0255f94e3354250d142b688013fad')
groups=('gnome')

## Todo:
##   None

## Notes:
##   None

## Changelog:
##   rel1: initial rubix release

build() {

	export MAKEFLAGS=""

	cd $startdir/src/$pkgname-$pkgver

	./configure --prefix=/usr --sysconfdir=/etc
	make || return 1
	make DESTDIR=$startdir/pkg install

	mkdir -p $startdir/pkg/usr/doc/$pkgname-$pkgver
	cp	-a		\
		AUTHORS		\
		COPYING		\
		ChangeLog	\
		INSTALL		\
		NEWS		\
		README		\
		TODO		\
	$startdir/pkg/usr/doc/$pkgname-$pkgver
	chmod 644 $startdir/pkg/usr/doc/$pkgname-$pkgver/*

	find $startdir/pkg -name *.la -exec rm {} \;

	chown -R root.bin $startdir/pkg/usr/bin $startdir/pkg/usr/sbin

}
