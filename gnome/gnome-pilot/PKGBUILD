# Maintainer: Joshua Rubin <joshua@rubixlinux.org>

pkgname=gnome-pilot
pkgver=2.0.13
pkgrel=2
pkgdesc="gnome-pilot - gnome pilot apps"
depends=('ncurses' 'glibc' 'libXi' 'libgnomeui' 'esound' 'fontconfig' 'expat' 'openssl' 'libgnomecanvas' 'libXrender' 'zlib' 'alsa-lib' 'libXau' 'pilot-link' 'libjpeg' 'libgnome' 'libXdmcp' 'audiofile' 'libxml2' 'gnome-panel' 'libbonoboui' 'libpng' 'libXinerama' 'libSM' 'orbit2' 'libXext' 'libglade' 'gtk+2' 'atk' 'ncurses' 'gconf' 'libICE' 'libart_lgpl' 'readline' 'freetype2' 'libXfixes' 'cairo' 'pango' 'libXcursor' 'libbonobo' 'libX11' 'glib2' 'gnome-keyring' 'gnome-vfs' 'libXrandr' 'popt' 'scrollkeeper' 'desktop-file-utils' 'hicolor-icon-theme')
source=(ftp://ftp.gnome.org/pub/GNOME/sources/$pkgname/2.0/$pkgname-$pkgver.tar.bz2)
md5sums=('662aae1d5915e81e64ee1a6c732c627d')
groups=('gnome')
install=$pkgname.install

## Todo:
##   None

## Notes:
##   None

## Changelog:
##   rel2: added scrollkeeper, desktop-file-utils and hicolor-icon-theme as deps (for install script) 2006.04.06
##   rel1: initial rubix release

build() {

	export MAKEFLAGS=""

	cd $startdir/src/$pkgname-$pkgver

	./configure --prefix=/usr --sysconfdir=/etc
	make || return 1
	make DESTDIR=$startdir/pkg install

	mkdir -p $startdir/pkg/usr/doc/$pkgname-$pkgver
	cp	-a		\
		AUTHORS		\
		COPYING		\
		ChangeLog	\
		INSTALL		\
		NEWS		\
		README		\
		TODO		\
	$startdir/pkg/usr/doc/$pkgname-$pkgver
	chmod 644 $startdir/pkg/usr/doc/$pkgname-$pkgver/*

	chown -R root.bin $startdir/pkg/usr/bin

	find $startdir/pkg -name *.la -exec rm {} \;

}
