pkgname=etc
pkgver=1.0
pkgrel=18
pkgdesc="etc (system configuration files) System configuration files.  The /etc directory is traditionally the location where configuration files are found."
url="http://www.rubix-os.org"
source=($pkgname.tar.gz)
md5sums=('f2cb9be7d984fc400638f30587941de2')
backup=('etc/mtab'		\
	'etc/motd'		\
	'etc/group'		\
	'etc/csh.login'		\
	'etc/ld.so.conf'	\
	'etc/profile'		\
	'etc/inputrc'		\
	'etc/shadow'		\
	'etc/passwd'		\
	'etc/printcap'		\
	'etc/gshadow'		\
	'etc/issue'		\
	'etc/securetty'		\
	'etc/shells'		\
	'etc/issue.net'		\
	'etc/nsswitch.conf'	\
	'etc/profile.d/lang.csh'\
	'etc/profile.d/lang.sh'	\
	'var/log/lastlog'	\
	'var/log/wtmp'		\
	'var/run/utmp'		\
	'etc/HOSTNAME'		)

