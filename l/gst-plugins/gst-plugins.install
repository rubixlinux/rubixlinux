post_install() {
	ldconfig -r .
	rm -f var/lib/cache/gstreamer-0.8/{compreg,registry}.xml
	gst-register > /dev/null 2>&1
	gst-compprep > /dev/null 2>&1
}

post_upgrade() {
	post_install $1
}

post_remove() {
	ldconfig -r .
	rm -f var/lib/cache/gstreamer-0.8/{compreg,registry}.xml
	gst-register > /dev/null 2>&1
	gst-compprep > /dev/null 2>&1
}

op=$1
shift
$op $*
