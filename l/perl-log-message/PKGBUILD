# Maintainer: Joshua Rubin <joshua@rubixlinux.org>

PERL=5.8.8

pkgname=perl-log-message
pkgver=0.01
pkgrel=1
pkgdesc="Log::Message"
url="http://search.cpan.org/~kane/Log-Message-$pkgver/lib/Log/Message.pm"
source=(http://search.cpan.org/CPAN/authors/id/K/KA/KANE/Log-Message-$pkgver.tar.gz)
md5sums=('f04298e81488a5a39930fd417d47656e')

## Todo:
##   None

## Notes:
##   None

## Changelog:
##   rel1: Initial Rubix release

build() {

	cd $startdir/src/Log-Message-$pkgver

	perl Makefile.PL || return 1
	make || return 1
	make test || return 1
	make install DESTDIR=$startdir/pkg

	mkdir -p $startdir/pkg/usr/doc/perl-$PERL/Log-Message-$pkgver
	cp	-a	\
		README	\
	$startdir/pkg/usr/doc/perl-$PERL/Log-Message-$pkgver

	find $startdir/pkg -perm 0444 -exec chmod 0644 {} \;

	rm -r $startdir/pkg/usr/lib/perl5/$PERL
	rm -r $startdir/pkg/usr/lib/perl5/site_perl/$PERL/$CHOST-thread-multi

	mv $startdir/pkg/usr/share/man $startdir/pkg/usr
	rmdir $startdir/pkg/usr/share

}
