# Maintainer: Joshua Rubin <joshua@rubix-os.org>

pkgname=libgtkhtml
pkgver=2.6.3
pkgrel=1
pkgdesc="libgtkhtml GtkHTML is a lightweight HTML rendering/printing/editing engine.  It was originally based on KHTMLW, part of the KDE project. libgtkhtml is used by the GIMP help browser."
depends=('gtk'+'2' 'libxml2')
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/2.6/$pkgname-$pkgver.tar.bz2)
md5sums=('c77789241d725e189ffc0391eda94361')

#Todo:
#None

#Notes:
#None

#Changelog:
#rel1: Initial Rubix release 2005.05.12

build() {

	cd $startdir/src/$pkgname-$pkgver

	find . -perm 777 -exec chmod 755 {} \;
	find . -perm 664 -exec chmod 644 {} \;

	./configure				\
		--prefix=/usr			\
		--sysconfdir=/etc		\
		--localstatedir=/var/lib	\
		--enable-static=no		\
		--disable-accessibility		\
		$CHOST
	make
	make install DESTDIR=$startdir/pkg

	mkdir -p $startdir/pkg/usr/doc/$pkgname-$pkgver
	cp	-a		\
		AUTHORS		\
		COPYING.LIB	\
		NEWS		\
		README		\
		TODO		\
	$startdir/pkg/usr/doc/$pkgname-$pkgver

}
