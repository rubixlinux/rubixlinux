# Maintainer: Joshua Rubin <joshua@rubix-os.org>

pkgname=artwiz-fonts
pkgver=1.3
pkgrel=1
pkgdesc="This is set of (improved) artwiz fonts. The ultimate solution to your all problems with artwiz fonts."
url="http://fluxbox.sourceforge.net/artwiz-aleczapka/readme.htm"
depends=('x11')
install=artwiz-fonts.install
source=(http://dl.sourceforge.net/sourceforge/artwizaleczapka/artwiz-aleczapka-$pkgver.tar.bz2)
md5sums=('8b86cd1009f9adf1629da9d6f56e9d5e')

build() {

    cd $startdir/src/artwiz-aleczapka

	mkdir -p $startdir/pkg/usr/X11R6/lib/X11/fonts/artwiz-fonts
	mv *.pcf $startdir/pkg/usr/X11R6/lib/X11/fonts/artwiz-fonts

	mkdir -p $startdir/pkg/usr/X11R6/lib/X11/doc/$pkgname-$pkgver
	cp	-a		\
		AUTHORS		\
		BUGS		\
		COPYING		\
		ChangeLog	\
		NEWS		\
		README		\
	$startdir/pkg/usr/X11R6/lib/X11/doc/$pkgname-$pkgver

	cd $startdir/pkg/usr/X11R6/lib/X11/fonts/artwiz-fonts
	gzip *
	fc-cache -fv ./
	mkfontdir
	mkfontscale

}
