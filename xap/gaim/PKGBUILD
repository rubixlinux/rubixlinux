build() {

	build_gaim
	build_gaim_enc
	build_guifications

	find $startdir/pkg -perm 444 -exec chmod 644 {} \;
	find $startdir/pkg -perm 555 -exec chmod 755 {} \;

}

build_gaim() {

	cd $startdir/src/$pkgname-$pkgver

	./configure						\
		--prefix=/usr					\
		--program-prefix=""				\
		--program-suffix=""				\
		--with-nspr-includes=/usr/include/firefox/nspr	\
		--with-nspr-libs=/usr/lib			\
		--with-nss-libs=/usr/lib			\
		--with-nss-includes=/usr/include/firefox/nss	\
		$CHOST
	make || return 1
	make install DESTDIR=$startdir/pkg

	mkdir -p $startdir/pkg/usr/doc/$pkgname-$pkgver
	cp	-a		\
		ABOUT-NLS	\
		AUTHORS		\
		COPYING		\
		ChangeLog	\
		HACKING		\
		NEWS		\
		README		\
		doc/FAQ		\
		doc/CREDITS	\
	$startdir/pkg/usr/doc/$pkgname-$pkgver
	chmod 644 $startdir/pkg/usr/doc/$pkgname-$pkgver/*

	find $startdir/pkg -name perllocal.pod -exec rm {} \;
	find $startdir/pkg -name .packlist     -exec rm {} \;

	 chown -R root.bin $startdir/pkg/usr/bin

}

build_gaim_enc() {

	cd $startdir/src/gaim-encryption-$GAIMENC

	./configure						\
		--prefix=/usr					\
		--disable-static				\
		--program-prefix=""				\
		--program-suffix=""				\
		--with-nspr-includes=/usr/include/firefox/nspr	\
		--with-nspr-libs=/usr/lib			\
		--with-nss-libs=/usr/lib			\
		--with-nss-includes=/usr/include/firefox/nss	\
		$CHOST
	make || return 1
	make install DESTDIR=$startdir/pkg

}

build_guifications() {

	cd $startdir/src/guifications-$GUIFICATIONS
	./configure						\
		--prefix=/usr					\
		--disable-static				\
		--program-prefix=""				\
		--program-suffix=""				\
		$CHOST
	make || return 1
	make install DESTDIR=$startdir/pkg

}
