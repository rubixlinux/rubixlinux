KDE=3.5.3

pkgname=kdeedu
pkgver=3.5.3
pkgrel=1
url="http://www.kde.org"
pkgdesc="kdeedu Educational applications for KDE."
groups=('kde')
depends=('glibc' 'mesa3d' 'esound' 'fontconfig' 'expat' 'libXrender' 'zlib' 'alsa-lib' 'libXau' 'acl' 'libjpeg' 'libidn' 'libvorbis' 'audiofile' 'libXdmcp' 'libXmu' 'libmad' 'libmng' 'libXt' 'libXft' 'libXinerama' 'libpng' 'libXext' 'libSM' 'attr' 'libICE' 'libogg' 'libart_lgpl' 'qt' 'freetype2' 'libXfixes' 'libXcursor' 'libX11' 'pcre' 'arts' 'glib2' 'gcc' 'kdelibs' 'libXrandr')
source=(ftp://ftp.kde.org/pub/kde/stable/$KDE/src/$pkgname-$pkgver.tar.bz2)
md5sums=('5c9cb7f25c8627772d6de5a3ed550691')

