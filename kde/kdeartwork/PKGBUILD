KDE=3.5.1

pkgname=kdeartwork
pkgver=3.5.1
pkgrel=1
pkgdesc="kdeartwork Additional themes, screensavers, sounds, wallpapers, and window styles."
url="http://www.kde.org"
groups=('kde')
depends=('qt' 'glibc' 'esound' 'fontconfig' 'xfsprogs' 'x11' 'kdebase' 'expat' 'libogg' 'zlib'	\
	 'libart_lgpl' 'alsa-lib' 'freetype2' 'libjpeg' 'libidn' 'libvorbis' 'audiofile' 'arts'	\
	 'libmad' 'glib2' 'libmng' 'gcc' 'kdelibs' 'libpng'					)
source=(ftp://ftp.kde.org/pub/kde/stable/$KDE/src/$pkgname-$pkgver.tar.bz2)
md5sums=('8053bb1a1b2a5844b29f5f96328b1d96')

